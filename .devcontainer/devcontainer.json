{
  "name": "Codespace GUI (browser VNC)",
  "build": {
    "dockerfile": "Dockerfile"
  },

  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": { "label": "Desktop (noVNC)", "onAutoForward": "openBrowser" }
  },

  "remoteUser": "vscode",
  "overrideCommand": false,

  "postCreateCommand": "bash .devcontainer/start-vnc.sh"
}
