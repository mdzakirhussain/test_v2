{
  "name": "Codespace with GUI",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--env", "DISPLAY=:1"
  ],
  "postCreateCommand": "tightvncserver :1 && websockify 6080 --web=/usr/share/novnc 5901",
  "forwardPorts": [
    6080
  ],
  "customizations": {
    "vscode": {
      "extensions": ["ms-vscode.cpptools"]
    }
  }
}
