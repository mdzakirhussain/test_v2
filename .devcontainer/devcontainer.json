{
  "name": "GUI Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },

  "runArgs": ["--env", "DISPLAY=:1"],

  "initializeCommand": "chmod +x .devcontainer/start-vnc.sh",

  "postCreateCommand": "mkdir -p ~/.vnc && echo test123 | vncpasswd -f > ~/.vnc/passwd && chmod 600 ~/.vnc/passwd",

  "postStartCommand": "/bin/bash .devcontainer/start-vnc.sh",

  "forwardPorts": [6080],
  "overrideCommand": false
}
